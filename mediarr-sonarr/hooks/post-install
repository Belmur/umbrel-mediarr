#!/usr/bin/env bash


# Post-Processing Script zum Ändern des Ports in config.xml
# Ändert <Port>8989</Port> zu <Port>8990</Port>

CONFIG_FILE=""${APP_DATA_DIR}/data/config/config.xml""

if [ ! -f "$CONFIG_FILE" ]; then
    echo "Fehler: $CONFIG_FILE nicht gefunden"
    exit 1
fi

# Backup erstellen
cp "$CONFIG_FILE" "${CONFIG_FILE}.backup"

# Port ändern
sed -i 's/<Port>8989<\/Port>/<Port>8990<\/Port>/g' "$CONFIG_FILE"

echo "Port erfolgreich geändert: 8989 → 8990"
echo "Backup gespeichert: ${CONFIG_FILE}.backup"